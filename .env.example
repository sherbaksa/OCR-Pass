# База данных PostgreSQL
POSTGRES_USER=user
POSTGRES_PASSWORD=password
POSTGRES_DB=passport_db
# DATABASE_URL для локальных подключений (Alembic, тесты)
DATABASE_URL=postgresql://user:password@localhost:5434/passport_db

# MinIO (S3-совместимое хранилище)
# Для локальной разработки используйте значения по умолчанию
# В продакшене обязательно измените access_key и secret_key
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET_NAME=passport-documents
MINIO_ENDPOINT=http://localhost:9000

# Внешние API (для будущего использования)
# Google Vision API Settings
GOOGLE_VISION_ENABLED=false
GOOGLE_VISION_MOCK_MODE=false
GOOGLE_APPLICATION_CREDENTIALS=/app/secrets/google-vision-key.json

# PaddleOCR Settings
PADDLEOCR_USE_GPU=false
PADDLEOCR_LANG=ru
# PADDLEOCR_DET_MODEL_DIR=/app/models/paddleocr/det
# PADDLEOCR_REC_MODEL_DIR=/app/models/paddleocr/rec
# PADDLEOCR_CLS_MODEL_DIR=/app/models/paddleocr/cls


# Настройки приложения
DEBUG=True
API_V1_PREFIX=/api/v1
SECRET_KEY=change-me-in-production
